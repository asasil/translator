# editorconfig.org
root = true

[*]
charset = utf-8
indent_size = 2
end_of_line = lf
draw_white_space = all
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = tab
trim_trailing_whitespace = false

[*.coffee]
indent_style = tab

[*.{yml,yaml}]
indent_style = space

[*.py]
indent_style = tab

[*.js]
indent_style = space
